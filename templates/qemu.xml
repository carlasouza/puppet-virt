<domain type='qemu'>
  <name><=% resource[:name] %></name>
  <memory><=% resource[:memory] %></memory>
  <currentMemory><=% resource[:currentmemory] %></currentMemory>
  <vcpu><=% resource[:vcpu] %></vcpu>
  <os>
    <type arch='<=% resource[:arch] %>' machine='pc'><=% resource[:os_type] %></type>
    <boot dev='<=% resource[:cdrom] %>'/>
  </os>
  <devices>
    <emulator><=% resource[:emulator] %></emulator>
    <disk type='file' device='cdrom'>
      <source file='<=% resource[:boot_location] %>'/>
      <target dev='<=% resource[:boot_device] %>'/>
      <readonly/>
    </disk>
    <disk type='file' device='disk'>
      <source file='<=% resource[:virt_path] %>'/>
      <target dev='<=% resource[:hd_device] %>'/>
    </disk>
    <interface type='network'>
      <source network='<=% resource[:network] %>'/>
    </interface>
    <graphics type='vnc' port='-1'/>
  </devices>
</domain>
